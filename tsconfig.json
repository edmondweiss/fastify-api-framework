{
  "compilerOptions": {
    "baseUrl": "src",
    "experimentalDecorators": true,
    "incremental": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/scripts"
  ]
}