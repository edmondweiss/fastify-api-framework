{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2023",
    "lib": ["ES2023"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/scripts"]
}
